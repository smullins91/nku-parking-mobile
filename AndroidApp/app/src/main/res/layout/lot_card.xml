<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="10dp"
        android:layout_height="fill_parent"
        android:id="@+id/lot_header_status"
        android:background="#00FF00" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title"
        android:id="@+id/lot_card_title"
        android:layout_marginLeft="12dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Status"
        android:id="@+id/lot_status_text"
        android:layout_marginRight="12dp"
        android:gravity="right"
        android:textColor="#999999"
        android:textAlignment="gravity"
        android:layout_gravity="right" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show on Map"
        android:id="@+id/button_show_map"
        android:background="#00000000"
        android:layout_below="@+id/lot_card_title"
        android:layout_alignLeft="@+id/lot_card_title"
        android:layout_alignStart="@+id/lot_card_title"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Lot"
        android:id="@+id/button_view_lot"
        android:background="#00000000"
        android:layout_toRightOf="@+id/button_show_map"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/lot_card_title"
        android:layout_marginTop="10dp" />

</RelativeLayout>